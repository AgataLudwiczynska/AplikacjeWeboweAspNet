@page
@model AplikacjeWeboweAspNet.Pages.Authors.DeleteModel
@{
    ViewData["Title"] = "Delete author";
}

<h2 class="my-4">Delete Author</h2>

<h3 class="h4 mb-1">Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Author.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Model.Author.FirstName
        </dd>
        <dt class="col-sm-2">

            @Html.DisplayNameFor(model => model.Author.LastName)
        </dt>
        <dd class="col-sm-10">
            @Model.Author.LastName
        </dd>
        <dt class="col-sm-2">

            @Html.DisplayNameFor(model => model.Author.DateOfBirth)
        </dt>
        <dd class="col-sm-10">
            @Model.Author.DateOfBirth.ToShortDateString()
        </dd>
        <dt class="col-sm-2">

            @Html.DisplayNameFor(model => model.Author.DateOfDeath)
        </dt>
        <dd class="col-sm-10">
            @Model.Author.DateOfDeath?.ToShortDateString()
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Author.ID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="./Index" class="btn btn-outline-primary">Cancel</a>
    </form>
</div>

