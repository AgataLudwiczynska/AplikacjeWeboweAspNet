@page
@model AplikacjeWeboweAspNet.Pages.Books.DeleteModel
@{
    ViewData["Title"] = "Delete book";
}

<h2 class="my-4">Delete Book - @Model.Book.Title</h2>

<h3 class="h4 mb-1">Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Title)
        </dt>
        <dd class="col-sm-10">
            @Model.Book.Title
        </dd>
        <dt class="col-sm-2">

            @Html.DisplayNameFor(model => model.Book.Author)
        </dt>
        <dd class="col-sm-10">
            @Model.Book.Author.FirstName @Model.Book.Author.LastName
        </dd>
        <dt class="col-sm-2">

            @Html.DisplayNameFor(model => model.Book.PublishingHouse)
        </dt>
        <dd class="col-sm-10">
            @Model.Book.PublishingHouse
        </dd>
        <dt class="col-sm-2">

            @Html.DisplayNameFor(model => model.Book.ReleaseDate)
        </dt>
        <dd class="col-sm-10">
            @Model.Book.ReleaseDate.ToShortDateString()
        </dd>
        <dt class="col-sm-2">

            @Html.DisplayNameFor(model => model.Book.NumberOfPage)
        </dt>
        <dd class="col-sm-10">
            @Model.Book.NumberOfPage
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Book.ID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="./Index" class="btn btn-outline-primary">Cancel</a>
    </form>
</div>
